{
  "manifest_version": 2,
  "name": "wakatime-review",
  "version": "1.0",
  "description": "Measure time spent on review and sends it to wakatime",

  "icons": {
    "48": "icons/pull_request-48.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "*://wakatime.com/api/v1/*"
  ],

  "options_ui": {
    "page": "options.html"
  },

  "content_scripts": [
    {
      "matches": ["*://bitbucket.org/*/pull-requests/*"],
      "js": ["wakatime-review.js"]
    }
  ]

}
